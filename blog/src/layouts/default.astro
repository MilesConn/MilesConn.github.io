---
import { SITE } from '$/config'
import BaseHead from '$/components/BaseHead.astro';
import MainLayout from '$/components/MainLayout.astro';

const { content, showPageHeader = true } = Astro.props
---
<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={ content.title ? `${ SITE.title } | ${content.title}` : SITE.title } description={ content.description } />
        <script id="frag" type="x-shader/x-vertex">
        uniform float time;
        uniform vec3 color;
        varying vec2 vUv;
        #pragma glslify: random = require(glsl-random)

        void main() {
            // vec3 color = vec3(0.05,0.2, 0,0025);
            gl_FragColor.rgba = vec4(0.5 + 0.3 * sin(vUv.yxx + time) + color, 1.0);
            // gl_FragColor.rgba = vec4(vec3(0.), 1.);
        }
        </script>
       <script id="vert" type="x-shader/x-vertex">
        varying vec2 vUv;
        void main() {
        vUv = uv;
        gl_Position = projectionMatrix * modelViewMatrix * vec4(position, 1.0);
        }
        </script>
    </head>
    <MainLayout>
        {showPageHeader &&
            <div class="page__header">
                <h1 class="page__title">{content.title}</h1>
                <h5 class="page__desc">{content.description}</h5>
            </div>
        }
        <slot />
    </MainLayout>
</html>
<style>
    .page__header {
        @apply py-4 mb-1
    }
    .page__title {
        @apply text-5xl font-extrabold text-theme-primary dark:text-theme-dark-primary
    }
    .page__desc {
        @apply text-gray-400
    }
</style>
