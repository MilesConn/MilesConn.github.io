{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES2022",
    "lib": [
      "es2020"
    ],
    "target": "es2019",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "$/*": [
        "src/*"
      ],
      "$components/*": [
        "src/components/*"
      ],
    },
    "types": [
      "astro/env"
    ]
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.astro",
    "src/**/*.js",
    "src/**/*.ts"
  ],
}