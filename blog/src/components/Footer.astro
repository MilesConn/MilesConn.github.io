---
const currentDate = new Date();
---

<footer class="footer">
  <nav class="nav">
    <div>
      <!-- TODO: Spread these  out evenely at the bottom -->
      {currentDate.getFullYear()} &copy; Copyright notice | Last updated: {
        currentDate.getMonth() + 1
      }/{currentDate.getDate()}/{
        currentDate.getFullYear().toString().substring(2)
      }
    </div>
  </nav>
</footer>

<style>
  .footer {
    @apply py-6 border-t;
  }
</style>
